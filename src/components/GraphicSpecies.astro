---
import PlotFigure from "../components/PlotFigure.astro";
import * as Plot from "@observablehq/plot";
import penguins from "../assets/penguins.json";
interface Props {
    species: string,
}
const {species} = Astro.props;
console.log(species);

---
<PlotFigure
    options={{
        marks: [
            Plot.dot(penguins, {
                x: "culmen_length_mm",
                y: "culmen_depth_mm",
                fill: "species",
                filter: (p) => p.species === `${species}`,
            }),
        ],
    }}
/>